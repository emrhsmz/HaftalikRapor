@model IEnumerable<HaftalikRapor.Models.Reports>

@{
    ViewBag.Title = "Anasayfa";
}

<h2>Rapor Listesi</h2>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Month)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Week)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Interaction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Month)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Week)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Interaction)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rate) %
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Year)
    </td>
    <td>
        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Sil", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
